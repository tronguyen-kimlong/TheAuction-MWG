@model IEnumerable<Auction.Models.PostItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<partial name="~/Views/Shared/Table/_BeginTable.cshtml" />
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimesPost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUserNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimesPost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUserNavigation.Username)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
<partial name="~/Views/Shared/Table/_EndTable.cshtml" />