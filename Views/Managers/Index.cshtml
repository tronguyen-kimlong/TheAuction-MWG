@model IEnumerable<Auction.Models.Manager>

@{
    ViewData["Title"] = "Index";
}
<div style="text-align:center">
    <a asp-action="Export"> Export to Excell</a>
</div>


<partial name="~/Views/Shared/Table/_BeginTable.cshtml" />
    <thead>
        <tr>
            <th>
                <i class="fas fa-fw fa-cog"></i>
                <i class="fas fa-fw fa-cog"></i>
                <i class="fas fa-fw fa-cog"></i>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Username">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Username">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Username">Delete</a>
            </td>
            <td>
                @Html.DisplayFor(hii => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Roles)
            </td>
            
        </tr>
}
    </tbody>
<partial name="~/Views/Shared/Table/_EndTable.cshtml" />
